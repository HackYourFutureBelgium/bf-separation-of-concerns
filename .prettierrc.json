{
  "trailingComma": "all",
  "tabWidth": 2,
  "semi": true,
  "bracketSpacing": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "tabWidth": 2,
        "useTabs": false
      }
    },
    {
      "files": "*.css",
      "options": {
        "tabWidth": 4,
        "useTabs": false
      }
    },
    {
      "files": "*.html",
      "options": {
        "tabWidth": 4,
        "useTabs": false
      }
    }
  ]
}
